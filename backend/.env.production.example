# Production Environment Configuration
# Copy this to .env and update the values

# Database - Use your server's LAN IP instead of localhost
DATABASE_URL=postgresql://dashboard:dashboard_secret@YOUR_SERVER_IP:5432/family_dashboard

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
# IMPORTANT: Update this to your server's LAN IP
GOOGLE_REDIRECT_URI=http://YOUR_SERVER_IP:3000/api/auth/google/callback

# OpenWeatherMap
OPENWEATHER_API_KEY=your-openweathermap-api-key

# Google Maps
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Server
PORT=3000
NODE_ENV=production
# Not strictly needed with CORS origin:true, but can specify tablet IP
FRONTEND_URL=http://YOUR_TABLET_IP:8081
